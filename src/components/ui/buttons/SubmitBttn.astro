---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<button type="submit" class="cursor-pointer w-full items-center inline-flex justify-center px-4 py-2 mt-6 text-sm font-medium text-white bg-[#aa55f7] border border-transparent rounded-md shadow-sm hover:bg-[#9333ea] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#aa55f7] max-w-[450px] transition">
  {title}
</button>