---
import { db, Proyect } from 'astro:db';
import ProCard from './ProCard.astro';
import Header from "./Header.astro";



const proyects = await db.select().from(Proyect)
---
<section class="w-full">
  <Header>
    Proyects üõ†Ô∏è
  </Header>
  <div class="flex flex-wrap gap-8 sm:grid-cols-2 lg:grid-cols-2 sm:flex-row items-center justify-center justify-items-center grid-container">
    {
      proyects.map((proy) => (
        <ProCard
          id={proy.id}
          name={proy.name}
          description={proy.desc}
          homepage={proy.homePage}
          imgSrc={proy.img}
        />
      ))
    }
  </div>
</section>
