---
import formatDate from '../functions/formatDate.ts'
import Divider from './ui/Divider.astro'

interface Props {
  job: string
  enterprise: string
  dateBgin: Date
  dateEnd?: Date
  kAcomp: Array<string>
}

const { job, enterprise, dateBgin, dateEnd, kAcomp } = Astro.props;

const [dateBginF, dateEndF] = [
  dateBgin ? formatDate(dateBgin) : "",
  dateEnd ? formatDate(dateEnd) : ""
];

---

<div class="flex flex-col my-6">
  <div class="flex flex-col">
    <h2 class="text-lg font-semibold text-slate-200">{job} â€¢ {enterprise}</h2>
    <p class="text-sm text-slate-400">{dateBginF} - {dateEndF ? dateEndF : "Present"}</p>
  </div>
  <ul class="list-disc flex flex-col gap-2 ml-5 text-gray-300 text-md mt-6">
    {
      kAcomp.map((item) => (
        <li>{item}</li>
      ))
    }
  </ul>
</div>
<Divider/>
