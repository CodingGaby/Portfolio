---
import SubmitBttn from "@components/ui/buttons/SubmitBttn.astro"
import Layout from "../layouts/Layout.astro"
import Input from "src/components/ui/form/Input.astro"
import { db } from "astro:db";
import { Proyect } from "astro:db";
import { isDbError } from "astro:db";
import { ref, uploadBytes, getDownloadURL } from "firebase/storage";
import { storage } from "src/firebase/client";


if (Astro.request.method === 'POST') {
	// Analizar datos de formulario
  const formData = await Astro.request.formData();

  const name = formData.get('proyName');
  const description = formData.get('desc');
  const homepage = formData.get('homepage');
  const img = formData.get('img') as File;
  const id = crypto.randomUUID();
  let imgURL;

  try {
    const arrayBuffer = await img.arrayBuffer();
    const uint8Array = new Uint8Array(arrayBuffer);
    
    const imageUpload = async () => {
      if (!img) return;
      const imgRef = ref(storage, `proysImages/${crypto.randomUUID() + img.name}`);

      try {
        const snapshot = await uploadBytes(imgRef, uint8Array);
        imgURL = await getDownloadURL(snapshot.ref);
        console.log(`Image ${img.name} uploaded ✅`);
        console.log("URL Imagen obtenida ✅");
      } catch (error) {
        console.error('Upload failed:', error);
      }
    };

    await imageUpload();
    console.log(`la url de la imagen es: ${imgURL}`);
  } catch (error) {
    console.error('Error processing the image file:', error);
  }

  if (typeof name === 'string' && typeof description === 'string' && typeof homepage === 'string' &&  typeof id === 'string' && typeof imgURL === 'string') {
    console.log("all rigthy")
		//Insert data from the form to the User and upload it to the DB
		try {
			await db.insert(Proyect).values({
				id: id,
				name: name,
				desc: description,
        homePage: homepage,
        img: imgURL
			});
		} catch (e) {
			if (isDbError(e)) {
				console.error(`No se puede insertar un proyecto con nombre ${name}\n\n${e.message}`);
	
    	} else {
				console.error('Se ha producido un error inesperado');
			}
		}
	}
	return Astro.redirect("/");
}

